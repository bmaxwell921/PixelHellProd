<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.theoc.pixhell.MenuView
        android:id="@+id/menuView1"
        android:layout_width="wrap_content"
        android:layout_height="205dp"
        android:layout_above="@+id/linearLayout1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/menuView1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:onClick="startGameActivity"
            android:text="Start Game" />

        <Button
            android:id="@+id/button2"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:onClick="startStoreActivity"
            android:text="Store" />

        <Button
            android:id="@+id/button3"
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:onClick="startOptionsActivity"
            android:text="Options" />
        
           <Button
            android:id="@+id/button4"
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:onClick="startStoryActivity"
            android:text="Story" />
    </LinearLayout>

</RelativeLayout>